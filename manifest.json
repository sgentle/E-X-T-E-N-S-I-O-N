{
	"name": "E-X-T-E-N-S-I-O-N",
	"manifest_version": 2,
	"version": "0.3",
	"description": "Adds a special button whenever \"inception\" is mentioned on a page. Bwaaaaaaap!",
	"web_accessible_resources": [
		"bwaaap.png",
		"bwaaap.mp3"
	],
	"page_action": {
		"default_icon": "icon16.png"
	},
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": [
		"http://*/*",
		"https://*/*"
	],
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["bwaaap.js"],
			"all_frames": true
		}
	]
}
